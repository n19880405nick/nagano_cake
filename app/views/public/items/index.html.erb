<div class="container">
  <div class="row py-5">
    <div class="col-2">
      <div class="border border-dark" style="height: 300px">
        <p class="w-auto border-bottom border-dark text-center"><strong>ジャンル検索</strong></p>
        <ul style="list-style: none">
          <% @genres.each do |genre| %>
            <%= link_to items_path(genre.id) do %>
              <li class="my-1"><%= genre.name %></li>
            <% end %>
          <% end %>
        </ul>
      </div>      
    </div>
    <div class="col-10">
      <div class="w-auto d-flex align-items-end">
        <h1 class="inline">商品一覧</h1>
        <h3 class="inline">(全<%= @items_all.count %>件)</h3>
      </div>
      <div class="d-flex flex-wrap my-3">
        <% @items.each do |item| %>
          <%= link_to item_path(item.id) do %>
            <div class="my-3 mx-2 text-dark">
              <div class="block">
                <%= image_tag item.item_image, size: "200x100" %>
              </div>
              <div class="block">
                <p><%= item.name %></p>
              </div>
              <div class="block">
                <p>￥<%= item.price %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="mx-auto">
      <%= paginate @items, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>

