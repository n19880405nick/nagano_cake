<div class="container my-2">
	<div class="row px-2">
		<div class="col-3 my-3">
			<div class="alert alert-secondary", role="alert">
				<span>注文履歴一覧</span>
			</div>
		</div>
	</div>
	
	<div class="row my-3">
	  <table class="table table-bordered">
	    <thead>
	      <tr>
	        <td class="table-secondary" style="width: 13%">注文日</td>
	        <td class="table-secondary" style="width: 40%">配送先</td>
	        <td class="table-secondary" style="width: 13%">注文商品</td>
	        <td class="table-secondary" style="width: 10%">支払金額</td>
	        <td class="table-secondary" style="width: 10%">ステータス</td>
	        <td class="table-secondary" style="width: 14%">注文詳細</td>
	      </tr>
	    </thead>
	    <tbody>
	      <% @orders.each do |order| %>
	        <tr>
	          <td class="align-middle"><%= order.created_at.strftime("%Y/%m/%d") %></td>
	          <td>
	            〒<%= order.postal_code %><br>
	            <%= order.address %><br>
	            <%= order.name %>
	          </td>
	          <td>
	            <% order.order_details.each do |detail| %>
	              <%= detail.item.name %><br>
	            <% end %>
	          </td>
	          <td class="align-middle"><%= order.total_payment %>円</td>
	          <td class="align-middle"><%= order.order_status_i18n %></td>
	          <td>
	            <%= link_to "表示する", order_path(order.id), class: "btn btn-primary ml-3 mt-3" %>
	          </td>
	        </tr>
	      <% end %>
	    </tbody>
	  </table>
	</div>