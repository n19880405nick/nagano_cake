<div class="container">
    <div class="row px-2">
        <div class="col-4 my-5">
            <div class="alert alert-secondary", role="alert">
                <span><%= @customer.last_name+@customer.first_name %>さんの会員詳細</span>
            </div>
        </div>
    </div>
    
    <div class="row px-3">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <td scope="col", style="width: 20%">会員ID</th>
                    <td scope="col", style="width: 80%"><%= @customer.id %></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>氏名</td>
                    <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
                </tr>
                <tr>
                    <td>フリガナ</td>
                    <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= @customer.email %></td>
                </tr>
                <tr>
                    <td>会員ステータス</td>
                    <td>
                        <% if @customer.is_active == true %>
                            <p class="text-success"><strong>有効</strong></p>
                        <% else %>
                            <p class="text-muted"><strong>退会</strong></p>
                        <% end %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-2">
            <%= link_to edit_admin_customer_path(@customer.id) do %>
                <p class="btn btn-success">編集する</p>
            <% end %>
        </div>
        <div class="col-4">
            
                <p class="btn btn-primary">注文履歴一覧を見る</p>
            
        </div>
    </div>
            
</div>
