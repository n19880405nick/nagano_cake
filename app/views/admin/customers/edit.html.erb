<div class="container" style="height: 700px">
  <div class="row p-3">
    <div class="col-4 my-3">
      <h5 class="text-center" style="background-color: #6c757d36">
				<%= @customer.last_name+@customer.first_name %>さんの会員情報編集
			</h5>
		</div>
	</div>
	
	<div class="row px-4">
		<table class="table table-borderless">
			<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
				<thead>
					<tr>
						<td scope="col", style="width: 20%">会員ID</td>
						<td scope="col", style="width: 30%"><%= @customer.id %></td>
						<td scope="col", style="width: 30%"></td>
						<td scope="col", style="width: 20%"></td>
					</tr>
				</thead>
				<tbody class="form-group">
					<tr>
						<td class="align-middle">氏名</td>
						<td><%= f.text_field :last_name, class: "form-control" %></td>
						<td><%= f.text_field :first_name, class: "form-control" %></td>
						<td></td>
					</tr>
					<tr>
						<td class="align-middle">フリガナ</td>
						<td><%= f.text_field :last_name_kana, class: "form-control" %></td>
						<td><%= f.text_field :first_name_kana, class: "form-control" %></td>
						<td></td>
					</tr>
					<tr>
						<td class="align-middle">郵便番号</td>
						<td><%= f.text_field :postal_code, class: "form-control"%></td>
						<td></td>
						<td></td>
					</tr>
					<tr>
						<td class="align-middle">住所</td>
						<td colspan="3"><%= f.text_field :address, class: "form-control" %></td>
					</tr>
					<tr>
						<td class="align-middle">電話番号</td>
						<td><%= f.text_field :telephone_number, class: "form-control" %></td>
						<td></td>
						<td></td>
					</tr>
					<tr>
						<td class="align-middle">メールアドレス</td>
						<td><%= f.text_field :email, class: "form-control" %></td>
						<td></td>
						<td></td>
					</tr>
					<tr>
						<td class="align-middle">会員ステータス</td>
						<td>
							<%= f.radio_button :is_active, :on, style: "transform:scale(2.0)", class: "mt-2", checked: true %>
							<%= f.label :is_active, "有効", value: :on, class: "ml-2 mt-2" %>
							<%= f.radio_button :is_active, :off, style: "transform:scale(2.0)", class: "ml-3 mt-2" %>
							<%= f.label :is_active, "退会", value: :off, class: "ml-2 mt-2" %>
						</td>
						<td></td>
						<td></td>
					</tr>
					<tr class="mt-2">
						<td></td>
						<td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
						<td></td>
						<td></td>
					</tr>
				</tbody>
			<% end %>
		</table>
	</div>
</div>