<div class="container">
  <div class="row p-3">
    <div class="col-2 my-3">
      <div class="alert alert-secondary", role="alert">
        <span><strong>管理者</strong>ログイン</span>
      </div>
    </div>
  </div>
    
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row justify-content-center">  
      <label class="col-2 col-form-label">メールアドレス</label>
      <div class="col-6">
        <%= f.email_field :email, autofocus: true, class: "form-control",
              autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>
    
    <div class="form-group row justify-content-center">  
      <label class="col-2 col-form-label">パスワード </label>
      <div class="col-6 my-2">
        <%= f.password_field :password, class: "form-control",autocomplete: "current-password" %>
      </div>
    </div>
    
    <div class="form-group row mt-5">    
      <div class="col-3 mx-auto">
        <div class="actions">
          <%= f.submit "    ログイン    ", class: "btn btn-primary" %>
        </div>
      </div>
    </div>    
  <% end %>
  <%= render "admin/shared/links" %>
</div>

