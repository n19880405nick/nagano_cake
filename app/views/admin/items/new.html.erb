<div class="container" style="height: 700px">
  <div class="row p-3">
    <div class="col-2 offset-md-1 my-3">
      <h5 class="text-center" style="background-color: #6c757d36">商品新規登録</h5>
    </div>
  </div>

	<%= form_with model: @item, url: admin_items_path do |f| %>
		<div class="form-group row justify-content-center">
			<label class="col-2 col-form-label">商品画像</label>
			<div class="col-5">
				<%= f.file_field :item_image, accept: "image/*", class: "form-control-files" %>
			</div>
		</div>
		
		<div class="form-group row justify-content-center">
			<label class="col-2 col-form-label">商品名</label>
			<div class="col-5">
				<%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
			</div>
		</div>
		
		<div class="form-group row justify-content-center">
			<label class="col-2 col-form-label">商品説明</label>
			<div class="col-5">
				<%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %>
			</div>
		</div>
		
		<div class="form-group row justify-content-center">
			<label class="col-2 col-form-label">ジャンル</label>
			<div class="col-5">
				<%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "--選択してください--"}, {class: "form-control"} %>
			</div>
		</div>
		
		<div class="form-group row justify-content-center">
			<label class="col-2 col-form-label">税抜き価格(円)</label>
			<div class="col-5">
				<%= f.text_field :price, class: "form-control", placeholder: "1000" %>
			</div>
		</div>
		
		<div class="form-group row justify-content-center">
			<label class="col-2 col-form-label">販売ステータス</label>
			<div class="col-5 mt-2">
				<%= f.radio_button :is_active, :on, style: "transform:scale(2.0)", checked: true %>
				<%= f.label :is_active, "販売中", value: :on, class: "ml-2" %>
				<%= f.radio_button :is_active, :off, class: "ml-3", style: "transform:scale(2.0)" %>
				<%= f.label :is_active, "販売停止中", value: :off, class: "ml-2" %>
			</div>
		</div>
		
		<div class="form-group row justify-content-center">
			<div class="col-4 mt-3">
				<%= f.submit "  新規登録  ", class: "btn btn-success" %>
			</div>
		</div>
	<% end %>
</div>