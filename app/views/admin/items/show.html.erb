<div class="container" style="height: 700px">
  <div class="row p-3">
    <div class="col-2 offset-md-2 my-3">
      <h5 class="text-center" style="background-color: #6c757d36">商品詳細</h5>
    </div>
  </div>
	
	<div class="row p-3">
		<div class="col-3">
			<%= image_tag @item.item_image, size: "200x200" %>
		</div>
		<div class="col-7 ml-3">
			<table class="table table-borderless">
				<tbody>
					<tr>
						<td style="width: 30%">商品名</td>
						<td style="width: 70%"><%= @item.name %></td>
					</tr>
					<tr>
						<td>商品説明</td>
						<td><%= @item.introduction %></td>
					</tr>
					<tr>
						<td>ジャンル</td>
						<td><%= @item.genre.name %></td>
					</tr>
					<tr>
						<td>税込価格<br>(税抜価格)</td>
						<td class="align-middle">
							<%= (@item.price*1.1).floor %>(<%= @item.price %>)円
						</td>
					</tr>
					<tr>
						<td>販売ステータス</td>
						<td>
							<% if @item.is_active == true %>
								<p class="text-success"><strong>販売中</strong></p>
							<% else %>
								<p class="text-muted"><strong>販売停止中</strong></p>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-2">
			<%= link_to edit_admin_item_path(@item.id) do %>
				<p class="btn btn-success"><strong>編集する</strong></p>
			<% end %>
		</div>
	</div>
</div>