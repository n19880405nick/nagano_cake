<div class="container">
    <div class="row px-2">
        <div class="col-4 my-5">
            <div class="alert alert-secondary", role="alert">
                <span>注文履歴詳細</span>
            </div>
        </div>
    </div>
    
    <div class="row">
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <th scope="col", style="width: 20%">購入者</th>
                    <td scope="col", style="width: 80%"><u>
                        <%= @order.customer.last_name %> <%= @order.customer.first_name %>
                    </u></td>
                </tr>
                <tr>
                    <th>注文日</th>
                    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td>
                        〒<%= @order.postal_code %> <%= @order.address %> <%= @order.name %>
                    </td>
                </tr>
                <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
                    <tr>
                        <th>支払方法</th>
                        <td><%= f.label :payment_method %></td>
                    </tr>
                    <tr>
                        <th>注文ステータス</th>
                        <td>
                            <%= f.select :order_status, Order.order_statuses_i18n.invert %>
                            <%= f.submit :order_status, class: "btn btn-success" %>
                        </td>
                    </tr>
                    <% end %>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-8">
            <table class="table table-borderless border-bottom">
                <thead class="thead-light">
                    <tr>
                        <th scope="col", style="width: 30%">商品名</th>
                        <th scope="col", style="width: 15%">単価（税込）</th>
                        <th scope="col", style="width: 10%">数量</th>
                        <th scope="col", style="width: 15%">小計</th>
                        <th scope="col", style="width: 30%">製作ステータス</th>
                    </tr>
                </thead>
                <tbody>
                    <%= @orders.each do |order| %>
                        <tr>
                            <td><%= order.item.name %></td>
                            <td><%= order.order_detail.price %></td>
                            <td><%= order.order_detail.amount %></td>
                            <td><%= order.order_detail.price*order.order_detail.amount %></td>
                            <%= form_with model: @order_detail, url: admin_order_order_detail(@order_detail.id), method: :patch do |f| %>
                                <td>
                                    <%= f.collection_select :order_detail_id, OrderDetail.all, :id, :making_status, {include_blank: "着手不可"}, {class: "form-control"} %>
                                </td>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-4 align-self-end">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th scope="col">商品合計</th>
                        <td scope="col">a</td>
                    </tr>
                    <tr>
                        <th>送料</th>
                        <td><%= @order.shipping_cost %></td>
                    </tr>
                    <tr>
                        <th>請求金額合計</th>
                        <th><%= @order.total_payment %></th>
                    </tr>
                </tbody>
            </table>
            
        </div>
    </div>
</div>