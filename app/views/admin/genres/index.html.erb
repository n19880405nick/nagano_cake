<div class="container" style="height: 700px">
	<div class="row p-3">
		<div class="col-3 my-3">
			<h5 class="text-center" style="background-color: #6c757d36">ジャンル一覧・追加</h5>
		</div>
	</div>

<%= form_with model: @genre, url: "/admin/genres" do |f| %>
	<div class="form-group row mx-5">
		<label class="col-2 col-form-label ml-3">ジャンル名</label>
		<div class="col-4 mr-4">
			<%= f.text_field :name, class: "form-control", placeholder: "ジャンル名" %>
		</div>
		<div class="col-2">
			<%= f.submit "新規登録", class: "btn btn-success" %>
		</div>
	</div>
<% end %>

<div class="row p-5">
	<div class="col-6 mb-3">
		<table class="table">
			<thead class="thead-light">
				<tr>
					<th scope="col"></th>
					<th scope="col">ジャンル</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td class="align-middle"><%= genre.name %></td>
						<td></td>
						<td>
							<%= link_to edit_admin_genre_path(genre.id) do %>
								<button type="button", class="btn btn-success">編集する</button>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>