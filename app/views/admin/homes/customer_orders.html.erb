<div class="container" style="height: 700px">
  <div class="row p-3">
    <div class="col-3 my-3">
      <h5 class="text-center" style="background-color: #6c757d36">
        <%= @customer.last_name+@customer.first_name %>さんの注文履歴
        </h5>
    </div>
  </div>
	
	<div class="row px-2">
		<table class="table">
			<thead class="thead-light">
				<tr>
				  <th scope="col", style="width: 10%"></th>
					<th scope="col", style="width: 30%">購入日時</th>
					<th scope="col", style="width: 30%">注文個数</th>
					<th scope="col", style="width: 30%">注文ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @orders.each do |order| %>
					<tr>
					<% total_amount = 0 %>
					<% order.order_details.each do |detail| %>
						<% total_amount += detail.amount %>
					<% end %>
					  <td></td>
						<td><u>
							<%= link_to admin_order_path(order.id), class: "text-dark" do %>
								<%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
							<% end %>
						</u></td>
						<td><%= total_amount %></td>
						<td><%= order.order_status_i18n %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<div class="mx-auto">
      <%= paginate @orders, theme: 'twitter-bootstrap-4' %>
    </div>
	</div>
</div>